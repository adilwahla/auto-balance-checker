<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/appName"
            android:text="Demmo"
            android:textColor="#F4FA58"
            android:textSize="75dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/slogan"
            android:text="This is a Demmo App"
            android:textColor="#40FF00"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            tools:layout_editor_absoluteX="-16dp"
            app:layout_constraintTop_toBottomOf="@+id/appName"/>
    <TextView
            android:id="@+id/line"
            android:background="#F4FA58"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/slogan"/>
    <TextView
            android:id="@+id/txtSMS"
            android:inputType="textMultiLine"
            android:textColor="#40FF00"
            android:textSize="25dp"
            android:textStyle="italic"
            android:layout_width="336dp"
            android:layout_height="213dp"
            android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@+id/line" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="61dp" android:layout_marginRight="61dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp" android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/refresh"/>
    <Button
            android:id="@+id/refresh"
            android:text="Refresh"
            android:layout_width="131dp"
            android:layout_height="54dp"
            android:layout_marginTop="54dp"
            app:layout_constraintTop_toBottomOf="@+id/txtSMS" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="123dp" android:layout_marginStart="123dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="157dp"
            android:layout_marginRight="157dp" android:layout_marginBottom="27dp"
            app:layout_constraintBottom_toTopOf="@+id/btnBalance"/>
    <Button
            android:id="@+id/btnBalance"
            android:text="Check Balance"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@+id/txtSMS"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.395"
            app:layout_constraintHorizontal_bias="0.461"/>

</androidx.constraintlayout.widget.ConstraintLayout>